<Window x:Class="PlantUMLEditor.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="500" Width="600" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        Background="#FFFFFF">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Help" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="#1F1F1F" />
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource BackgroundSecondary}"/>
                        <Setter Property="CornerRadius" Value="6"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
                        <Setter Property="Margin" Value="0,8,0,0"/>
                    </Style>
                </StackPanel.Resources>
                
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ctrl + K" FontWeight="SemiBold" Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Grid.Column="1" Text="Format with line breaks in place" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ctrl + L" FontWeight="SemiBold" Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Grid.Column="1" Text="Format and remove line breaks" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Ctrl + S" FontWeight="SemiBold" Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Grid.Column="1" Text="Save" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="F12" FontWeight="SemiBold" Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Grid.Column="1" Text="Goto definition" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="F3" FontWeight="SemiBold" Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Grid.Column="1" Text="Find word" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="F11" FontWeight="SemiBold" Foreground="{StaticResource PrimaryAccent}"/>
                        <TextBlock Grid.Column="1" Text="Find all references" Margin="12,0,0,0"/>
                    </Grid>
                </Border>
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock  Text="Sequence diagrams can have a comment '@@novalidate to turn off validation." Margin="12,0,0,0"/>
                    </Grid>
                </Border>
                <Border>
                    <Grid>
                        <Grid.ColumnDefinitions>
                       
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                         
                        <TextBlock  Text="Sequence diagrams can have a comment '@@laxmode to allow partial action matches." Margin="12,0,0,0"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
